{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "NEXT_PUBLIC_SITE_URL",
        "NEXT_PUBLIC_API_URL",
        "NEXT_PUBLIC_SIGNAL_URL",
        "NODE_ENV",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "NEXTAUTH_SECRET",
        "NEXTAUTH_URL"
      ]
    },

    "lint": {
      "dependsOn": ["^lint"]
    },

    "check-types": {
      "dependsOn": ["^check-types"]
    },

    "dev": {
      "cache": false,
      "persistent": true
    },

    "start": {
      "dependsOn": ["start:frontend", "start:backend", "start:signal"],
      "cache": false
    },

    "start:frontend": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "env": [
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "NEXTAUTH_URL",
        "NEXTAUTH_SECRET",
        "NEXT_PUBLIC_API_URL",
        "NEXT_PUBLIC_SITE_URL",
        "NEXT_PUBLIC_SIGNAL_URL",
        "NODE_ENV"
      ],
      "outputs": [".next/**", "!.next/cache/**"]
    },

    "start:backend": {
      "dependsOn": ["^db:deploy"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "env": [
        "DATABASE_URL",
        "FRONTEND_URL",
        "PORT",
        "NEXTAUTH_SECRET",
        "NODE_ENV"
      ]
    },

    "start:signal": {
      "dependsOn": ["^db:deploy"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "env": ["DATABASE_URL", "PORT", "NODE_ENV"]
    },

    "generate": {
      "cache": false,
      "persistent": true
    },

    "db:deploy": {
      "cache": false,
      "env": ["DATABASE_URL"]
    }
  }
}
